{
    "name": "prooph/event-sourcing",
    "description": "PHP EventSourcing library",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "kontakt@codeliner.ws"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        }
    ],
    "keywords": [
        "EventSourcing",
        "DDD",
        "prooph"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3 || ^8.0",
        "prooph/event-store" : "^7.0"
    },
    "require-dev": {
        "psr/container": "^1.0",
        "sandrokeil/interop-config": "^2.0.1",
        "phpunit/phpunit": "^9.3",
        "prooph/snapshot-store": "^1.2.0",
        "prooph/php-cs-fixer-config": "^0.4",
        "phpspec/prophecy": "^1.9",
        "phpspec/prophecy-phpunit": "^2.0",
        "satooshi/php-coveralls": "^1.0",
        "prooph/bookdown-template": "^0.2.3"
    },
    "suggest": {
        "prooph/snapshot-store": "For usage with snapshots"
    },
    "conflict": {
        "sandrokeil/interop-config": "<2.0.1"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.1-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventSourcing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventSourcing\\": "tests/",
            "ProophTest\\EventStore\\": "vendor/prooph/event-store/tests/"
        }
    },
    "config": {
        "preferred-install": {
            "prooph/*": "source"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit"
    }
}
